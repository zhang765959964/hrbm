	<!-- 根据培训机构Id获取开班数 -->
	<select id="getCourseCountByOrgId" parameterType="java.lang.Long"  resultType="java.lang.Integer">
		SELECT count(1)
		FROM PX_COURSE
		WHERE 1=1 
		AND IS_DEL='0'
		AND PX_ORG_ID = #{pxOrgId,jdbcType=NUMERIC}
		order by CLICK_TIMES desc
	</select>
	
